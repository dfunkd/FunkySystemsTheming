<Window x:Class="FunkySystemsTheming.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:fa="http://schemas.fontawesome.io/icons/"
        xmlns:local="clr-namespace:FunkySystemsTheming"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:uc="clr-namespace:FunkySystemsTheming.UserControls"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        mc:Ignorable="d"
        Background="Transparent"
        Height="450"
        ResizeMode="NoResize"
        Title="MainWindow"
        Width="800"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None">

    <Window.CommandBindings>
        <CommandBinding Command="{x:Static local:MainWindow.CloseCommand}" CanExecute="CanExecuteCloseCommand" Executed="ExecutedCloseCommand" />
    </Window.CommandBindings>

    <Grid Background="{DynamicResource BodyBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Border Grid.Column="0" Grid.Row="0" Background="{DynamicResource HeaderFade}" BorderThickness="0" MouseDown="OnDrag">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="55" />
                    <ColumnDefinition Width="5*" />
                    <ColumnDefinition Width="55" />
                </Grid.ColumnDefinitions>

                <fa:ImageAwesome x:Name="faLoading" Grid.Column="0" Grid.RowSpan="2" Foreground="{DynamicResource HeaderTextFade}" Icon="Refresh" Margin="10, 0, 0, 0"
                                 Spin="True" Height="24" HorizontalAlignment="Right"
                                 Width="24" />

                <StackPanel Grid.Column="1" HorizontalAlignment="Center" Orientation="Horizontal">
                    <TextBlock FontFamily="Comic Sans MS" Foreground="{DynamicResource HeaderTextFade}" FontWeight="Bold" FontSize="48" FontStyle="Italic"
                               HorizontalAlignment="Right" Margin="15, 0" Text="Funky" VerticalAlignment="Center" />
                    <TextBlock Foreground="{DynamicResource SubHeaderFade}" FontWeight="Bold" FontSize="24" HorizontalAlignment="Left" Margin="10, 8, 5, 0" Text="Theming"
                               VerticalAlignment="Center" />
                </StackPanel>

                <Button Grid.Column="2" Command="local:MainWindow.CloseCommand" Height="30" HorizontalAlignment="Center" VerticalAlignment="Center" Width="30">
                    <Button.Content>
                        <TextBlock Text="X" />
                    </Button.Content>
                </Button>
            </Grid>
        </Border>

        <DockPanel Grid.Row="1" LastChildFill="True">
            <Border DockPanel.Dock="Top" Background="{DynamicResource TextBoxHeaderFade}" CornerRadius="8" Margin="5">
                <DockPanel LastChildFill="True">
                    <TextBlock DockPanel.Dock="Left" FontSize="16" FontWeight="Bold" Foreground="{DynamicResource TextBoxHeaderTextBrush}" HorizontalAlignment="Right"
                               Margin="5, 5, 10, 5" Text="TextBox Header" />
                    <Button DockPanel.Dock="Right" Height="30" Margin="5, 3" Width="30">
                        <Button.Content>
                            <TextBlock Text="X" />
                        </Button.Content>
                    </Button>
                    <Border DockPanel.Dock="Left" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1" Margin="0, 5, 5, 5">
                        <TextBox DockPanel.Dock="Left" Background="{DynamicResource TextBoxBackgroundFade}" BorderThickness="0" CaretBrush="{DynamicResource ButtonTextBrush}"
                                 FontSize="14" Foreground="{DynamicResource TextBoxHeaderTextBrush}" Text="Test" VerticalContentAlignment="Center" />
                    </Border>
                </DockPanel>
            </Border>

            <Border DockPanel.Dock="Top" Background="{DynamicResource TextBoxHeaderFade}" BorderBrush="{DynamicResource ListViewBorderBrush}" BorderThickness="1"
                    CornerRadius="10, 150, 0, 0" HorizontalAlignment="Left" Margin="5, 5, 5, 0" Width="300">
                <TextBlock FontSize="16" FontWeight="Bold" Foreground="{DynamicResource TextBoxHeaderTextBrush}" HorizontalAlignment="Left"
                           Margin="15, 5, 10, 5" Text="List View Header" />
            </Border>
            <Border DockPanel.Dock="Top" Background="{DynamicResource ListViewBackgroundBrush}" BorderBrush="{DynamicResource ListViewBorderBrush}" BorderThickness="1"
                    CornerRadius="0, 10, 10, 10" Margin="5, 0, 5, 5">
                <ListView x:Name="lvListView" Background="Transparent" BorderBrush="Transparent" BorderThickness="0">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Border>
        </DockPanel>
    </Grid>
</Window>
