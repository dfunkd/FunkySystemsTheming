<UserControl x:Class="FunkySystemsTheming.UserControls.HorizontalHeaderedTextBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FunkySystemsTheming.UserControls"
             mc:Ignorable="d"
             x:Name="ucHeaderedTextBox">
    
    <Border DockPanel.Dock="Top" Background="{DynamicResource TextBoxHeaderFade}" CornerRadius="8" Margin="5">
        <DockPanel LastChildFill="True">
            <TextBlock DockPanel.Dock="Left" FontSize="16" FontWeight="Bold" Foreground="{DynamicResource TextBoxHeaderTextBrush}" HorizontalAlignment="Right"
                   Margin="5, 5, 10, 5" Text="{Binding HeaderText, ElementName=ucHeaderedTextBox}" />
            <Button DockPanel.Dock="Right" Height="30" Margin="5, 3" Visibility="{Binding ButtonVisibility, ElementName=ucHeaderedTextBox}"
                    Width="{Binding ButtonWidth, ElementName=ucHeaderedTextBox}">
                <Button.Content>
                    <TextBlock Text="{Binding ButtonText, ElementName=ucHeaderedTextBox}" />
                </Button.Content>
            </Button>
            <Border DockPanel.Dock="Left" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1" Margin="0, 5, 5, 5">
                <TextBox DockPanel.Dock="Left" Background="{DynamicResource TextBoxBackgroundFade}" BorderThickness="0" CaretBrush="{DynamicResource ButtonTextBrush}"
                     FontSize="14" Foreground="{DynamicResource TextBoxHeaderTextBrush}" Text="Test" VerticalContentAlignment="Center" />
            </Border>
        </DockPanel>
    </Border>
</UserControl>
