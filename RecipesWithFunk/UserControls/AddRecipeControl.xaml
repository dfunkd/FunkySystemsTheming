<UserControl x:Class="RecipesWithFunk.UserControls.AddRecipeControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:conv="clr-namespace:RecipesWithFunk.Converters"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:RecipesWithFunk.UserControls"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:RecipesWithFunk.ViewModels"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
             Loaded="OnLoaded">

    <UserControl.CommandBindings>
        <CommandBinding Command="{x:Static local:AddRecipeControl.CancelCommand}" CanExecute="CanExecuteCancelCommand" Executed="ExecutedCancelCommand" />
        <CommandBinding Command="{x:Static local:AddRecipeControl.RateCommand}" CanExecute="CanExecuteRateCommand" Executed="ExecutedRateCommand" />
        <CommandBinding Command="{x:Static local:AddRecipeControl.SaveCommand}" CanExecute="CanExecuteSaveCommand" Executed="ExecutedSaveCommand" />
    </UserControl.CommandBindings>

    <UserControl.DataContext>
        <vm:AddRecipeControlViewModel />
    </UserControl.DataContext>

    <Border Grid.Column="1" Background="{DynamicResource Darker}" CornerRadius="5">
        <Grid Grid.Column="1" Grid.Row="0" Grid.RowSpan="3" Margin="0, 0, 0, 0" Visibility="{Binding Path=SelectedRecipe, Converter={StaticResource NullToCollapsedConverter}}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="2*" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="3*" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.Resources>
                <conv:RatingConverter x:Key="RatingConverter" OnBrush="{StaticResource RuanRedFade}" OffBrush="{StaticResource HeaderFade}" />
                <Style TargetType="Rectangle">
                    <Setter Property="HorizontalAlignment" Value="Left" />
                    <Setter Property="VerticalAlignment" Value="Bottom" />
                    <Setter Property="Margin" Value="5,0,0,0" />
                </Style>
            </Grid.Resources>

            <Border Grid.Column="0" Grid.ColumnSpan="4" Grid.Row="0" Background="{DynamicResource RuanRedFade}" BorderBrush="{DynamicResource Darkest}" BorderThickness="1" CornerRadius="10, 150, 150, 10" HorizontalAlignment="Stretch" Margin="5"
                    VerticalAlignment="Center">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="9*" />
                        <ColumnDefinition Width="2*" />
                        <ColumnDefinition Width="2*" />
                    </Grid.ColumnDefinitions>

                    <DockPanel Grid.Column="0" LastChildFill="True">
                        <TextBlock DockPanel.Dock="Left" FontSize="16" FontWeight="Bold" Foreground="{DynamicResource ButtonBrush}" HorizontalAlignment="Right" Margin="10, 5, 5, 5" Text="Servings:" VerticalAlignment="Center" />
                        <Border Grid.Column="3" BorderBrush="{DynamicResource Darkest}" BorderThickness="1" Margin="5, 10, 10, 10">
                            <TextBox DockPanel.Dock="Left" Background="{DynamicResource ReverseHeaderFade}" BorderBrush="Transparent" BorderThickness="0" FontSize="18" FontWeight="Bold" Foreground="{DynamicResource Darkest}" HorizontalAlignment="Stretch"
                                     Text="{Binding Name, Mode=TwoWay}" />
                        </Border>
                    </DockPanel>

                    <DockPanel Grid.Column="1" LastChildFill="True">
                        <TextBlock DockPanel.Dock="Left" FontSize="16" FontWeight="Bold" Foreground="{DynamicResource ButtonBrush}" HorizontalAlignment="Right" Margin="10, 5, 5, 5" Text="Type:" VerticalAlignment="Center" />
                        <Border Grid.Column="3" BorderBrush="{DynamicResource Darkest}" BorderThickness="1" Margin="5, 10, 10, 10">
                            <TextBox DockPanel.Dock="Left" Background="{DynamicResource ReverseHeaderFade}" BorderBrush="Transparent" BorderThickness="0" FontSize="18" FontWeight="Bold" Foreground="{DynamicResource Darkest}" HorizontalAlignment="Stretch"
                                     Text="{Binding Type, Mode=TwoWay}" />
                        </Border>
                    </DockPanel>

                    <DockPanel Grid.Column="2" LastChildFill="True" Margin="0, 0, 85, 0">
                        <TextBlock Grid.Column="2" FontSize="16" FontWeight="Bold" Foreground="{DynamicResource ButtonBrush}" HorizontalAlignment="Right" Margin="10, 5, 5, 5" Text="Servings: " VerticalAlignment="Center" />
                        <Border Grid.Column="3" BorderBrush="{DynamicResource Darkest}" BorderThickness="1" Margin="5, 10, 10, 10">
                            <xctk:IntegerUpDown BorderBrush="Transparent" BorderThickness="0" ValueChanged="OnServingsChanged" FontWeight="Bold" FormatString="N0" Increment="1" Maximum="200000" Minimum="1" PreviewKeyDown="OnServingsPreviewKeyDown"
                                                Value="{Binding Servings, Mode=TwoWay}">
                                <xctk:IntegerUpDown.Style>
                                    <Style TargetType="{x:Type xctk:IntegerUpDown}">
                                        <Setter Property="Background" Value="{DynamicResource ReverseHeaderFade}" />
                                    </Style>
                                </xctk:IntegerUpDown.Style>
                            </xctk:IntegerUpDown>
                        </Border>
                    </DockPanel>
                </Grid>
            </Border>

            <StackPanel Grid.Column="3" Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0, 5" VerticalAlignment="Center">
                <Button x:Name="btn1" Background="Transparent" BorderBrush="Transparent" Command="local:AddRecipeControl.RateCommand" CommandParameter="1" Height="47" Width="47">
                    <Path Data="F1 M 17.416,32.25L 32.910,32.25L 38,18L 43.089,32.25L 58.583,32.25L 45.679,41.494L 51.458,56L 38,48.083L 26.125,56L 30.597,41.710L 17.416,32.25 Z"
                          Fill="{Binding Rating, Converter={StaticResource RatingConverter}, ConverterParameter=1}" Height="35" Stretch="UniformToFill" Stroke="#FF000000" StrokeThickness="1" Width="35" />
                </Button>
                <Button x:Name="btn2" Background="Transparent" BorderBrush="Transparent" Command="local:AddRecipeControl.RateCommand" CommandParameter="2" Height="47" Width="47">
                    <Path Data="F1 M 17.416,32.25L 32.910,32.25L 38,18L 43.089,32.25L 58.583,32.25L 45.679,41.494L 51.458,56L 38,48.083L 26.125,56L 30.597,41.710L 17.416,32.25 Z"
                          Fill="{Binding Rating, Converter={StaticResource RatingConverter}, ConverterParameter=2}" Height="35" Stretch="UniformToFill" Stroke="#FF000000" StrokeThickness="1" Width="35" />
                </Button>
                <Button x:Name="btn3" Background="Transparent" BorderBrush="Transparent" Command="local:AddRecipeControl.RateCommand" CommandParameter="3" Height="47" Width="47">
                    <Path Data="F1 M 17.416,32.25L 32.910,32.25L 38,18L 43.089,32.25L 58.583,32.25L 45.679,41.494L 51.458,56L 38,48.083L 26.125,56L 30.597,41.710L 17.416,32.25 Z"
                          Fill="{Binding Rating, Converter={StaticResource RatingConverter}, ConverterParameter=3}" Height="35" Stretch="UniformToFill" Stroke="#FF000000" StrokeThickness="1" Width="35" />
                </Button>
                <Button x:Name="btn4" Background="Transparent" BorderBrush="Transparent" Command="local:AddRecipeControl.RateCommand" CommandParameter="4" Height="47" Width="47">
                    <Path Data="F1 M 17.416,32.25L 32.910,32.25L 38,18L 43.089,32.25L 58.583,32.25L 45.679,41.494L 51.458,56L 38,48.083L 26.125,56L 30.597,41.710L 17.416,32.25 Z"
                          Fill="{Binding Rating, Converter={StaticResource RatingConverter}, ConverterParameter=4}" Height="35" Stretch="UniformToFill" Stroke="#FF000000" StrokeThickness="1" Width="35" />
                </Button>
                <Button x:Name="btn5" Background="Transparent" BorderBrush="Transparent" Command="local:AddRecipeControl.RateCommand" CommandParameter="5" Height="47" Width="47">
                    <Path Data="F1 M 17.416,32.25L 32.910,32.25L 38,18L 43.089,32.25L 58.583,32.25L 45.679,41.494L 51.458,56L 38,48.083L 26.125,56L 30.597,41.710L 17.416,32.25 Z"
                          Fill="{Binding Rating, Converter={StaticResource RatingConverter}, ConverterParameter=5}" Height="35" Stretch="UniformToFill" Stroke="#FF000000" StrokeThickness="1" Width="35" />
                </Button>
            </StackPanel>

            <Border Grid.Column="0" Grid.Row="1" Background="{DynamicResource RuanRedFade}" BorderBrush="{DynamicResource Darkest}" BorderThickness="1" CornerRadius="10, 150, 0, 0" Margin="5, 5, 5, 0">
                <TextBlock FontSize="16" FontWeight="Bold" Foreground="{DynamicResource ButtonBrush}" Margin="15, 5" Text="Description" />
            </Border>
            <Border Grid.Column="0" Grid.ColumnSpan="4" Grid.Row="2" Background="{DynamicResource Lighter}" BorderBrush="{DynamicResource Darkest}" BorderThickness="1" CornerRadius="0, 10, 10, 10" Margin="5, 0, 5, 5">
                <TextBox AcceptsReturn="True" Background="Transparent" BorderBrush="Transparent" BorderThickness="0" FontSize="14" FontWeight="Bold" ScrollViewer.HorizontalScrollBarVisibility="Auto" ScrollViewer.VerticalScrollBarVisibility="Auto"
                         SpellCheck.IsEnabled="True" Text="{Binding Description, Mode=TwoWay}" TextWrapping="Wrap" />
            </Border>

            <Border Grid.Column="0" Grid.Row="3" Background="{DynamicResource RuanRedFade}" BorderBrush="{DynamicResource Darkest}" BorderThickness="1" CornerRadius="10, 150, 0, 0" Margin="5, 5, 5, 0">
                <TextBlock FontSize="16" FontWeight="Bold" Foreground="{DynamicResource ButtonBrush}" Margin="15, 5" Text="Ingredients" />
            </Border>
            <Border Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="4" Background="{DynamicResource Lighter}" BorderBrush="{DynamicResource Darkest}" BorderThickness="1" CornerRadius="0, 10, 10, 10" Margin="5, 0, 5, 5">
                <TextBox AcceptsReturn="True" Background="Transparent" BorderBrush="Transparent" BorderThickness="0" FontSize="14" FontWeight="Bold" ScrollViewer.HorizontalScrollBarVisibility="Auto" ScrollViewer.VerticalScrollBarVisibility="Auto"
                         SpellCheck.IsEnabled="True" Text="{Binding Ingredients, Mode=TwoWay}" TextWrapping="Wrap" />
            </Border>

            <Border Grid.Column="2" Grid.Row="3" Background="{DynamicResource RuanRedFade}" BorderBrush="{DynamicResource Darkest}" BorderThickness="1" CornerRadius="10, 150, 0, 0" Margin="5, 5, 5, 0">
                <TextBlock FontSize="16" FontWeight="Bold" Foreground="{DynamicResource ButtonBrush}" Margin="15, 5" Text="Directions" />
            </Border>
            <Border Grid.Column="2" Grid.ColumnSpan="2" Grid.Row="4" Background="{DynamicResource Lighter}" BorderBrush="{DynamicResource Darkest}" BorderThickness="1" CornerRadius="0, 10, 10, 10" Margin="5, 0, 5, 5">
                <TextBox AcceptsReturn="True" Background="Transparent" BorderBrush="Transparent" BorderThickness="0" FontSize="14" FontWeight="Bold" ScrollViewer.HorizontalScrollBarVisibility="Auto" ScrollViewer.VerticalScrollBarVisibility="Auto"
                         SpellCheck.IsEnabled="True" Text="{Binding Directions, Mode=TwoWay}" TextWrapping="Wrap" />
            </Border>

            <Border Grid.Column="0" Grid.Row="5" Background="{DynamicResource RuanRedFade}" BorderBrush="{DynamicResource Darkest}" BorderThickness="1" CornerRadius="10, 150, 0, 0" Margin="5, 5, 5, 0">
                <TextBlock FontSize="16" FontWeight="Bold" Foreground="{DynamicResource ButtonBrush}" Margin="15, 5" Text="Notes" />
            </Border>
            <Border Grid.Column="0" Grid.ColumnSpan="4" Grid.Row="6" Background="{DynamicResource Lighter}" BorderBrush="{DynamicResource Darkest}" BorderThickness="1" CornerRadius="0, 10, 10, 10" Margin="5, 0, 5, 5">
                <TextBox AcceptsReturn="True" Background="Transparent" BorderBrush="Transparent" BorderThickness="0" FontSize="14" FontWeight="Bold" ScrollViewer.HorizontalScrollBarVisibility="Auto" ScrollViewer.VerticalScrollBarVisibility="Auto"
                         SpellCheck.IsEnabled="True" Text="{Binding Note, Mode=TwoWay}" TextWrapping="Wrap" />
            </Border>

            <DockPanel Grid.Column="0" Grid.ColumnSpan="4" Grid.Row="7" HorizontalAlignment="Right" LastChildFill="False" Margin="5, 5, 5, 15" VerticalAlignment="Bottom">
                <Button DockPanel.Dock="Left" Command="local:AddRecipeControl.SaveCommand" HorizontalAlignment="Left" Margin="20, 0" VerticalAlignment="Top">
                    <Button.Content>
                        <TextBlock Text="Save" />
                    </Button.Content>
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="5" />
                        </Style>
                    </Button.Resources>
                </Button>
                <Button DockPanel.Dock="Left" Command="local:AddRecipeControl.CancelCommand" HorizontalAlignment="Right" Margin="20, 0" VerticalAlignment="Top">
                    <Button.Content>
                        <TextBlock Text="Cancel" />
                    </Button.Content>
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="5" />
                        </Style>
                    </Button.Resources>
                </Button>
            </DockPanel>
        </Grid>
    </Border>
</UserControl>
