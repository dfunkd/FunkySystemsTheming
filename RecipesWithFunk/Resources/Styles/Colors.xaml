<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Color x:Key="CobaltBlueColor">#FF0047AB</Color>
    <Color x:Key="RuanRedColor">#FFBD2036</Color>
    <Color x:Key="DarkRedColor">#FF991A2B</Color>
    <Color x:Key="RuanGreenColor">#FF20BD36</Color>
    <Color x:Key="ButtonColor">#FFDDDDDD</Color>
    <Color x:Key="LightestColor">#FF999999</Color>
    <Color x:Key="LighterColor">#FF595959</Color>
    <Color x:Key="DarkerColor">#FF323232</Color>
    <Color x:Key="DarkestColor">#FF0D0D0D</Color>

    <SolidColorBrush x:Key="CobaltBlueBrush" Color="{DynamicResource CobaltBlueColor}" />
    <SolidColorBrush x:Key="RuanRed" Color="{DynamicResource RuanRedColor}" />
    <SolidColorBrush x:Key="DarkRed" Color="{DynamicResource DarkRedColor}" />
    <SolidColorBrush x:Key="RuanGreen" Color="{DynamicResource RuanGreenColor}" />
    <SolidColorBrush x:Key="ButtonBrush" Color="{DynamicResource ButtonColor}" />
    <SolidColorBrush x:Key="Lightest" Color="{DynamicResource LightestColor}" />
    <SolidColorBrush x:Key="Lighter" Color="{DynamicResource LighterColor}" />
    <SolidColorBrush x:Key="Darker" Color="{DynamicResource DarkerColor}" />
    <SolidColorBrush x:Key="Darkest" Color="{DynamicResource DarkestColor}" />

    <LinearGradientBrush x:Key="DarkHeaderFade" StartPoint="0.5, 0" EndPoint="0.5, 1">
        <GradientStop Color="{DynamicResource LighterColor}" Offset="0" />
        <GradientStop Color="{DynamicResource DarkestColor}" Offset="1" />
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="DarkerHeaderFade" StartPoint="0.5, 0" EndPoint="0.5, 1">
        <GradientStop Color="{DynamicResource DarkerColor}" Offset="0" />
        <GradientStop Color="{DynamicResource DarkestColor}" Offset="1" />
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="ReverseDarkerHeaderFade" StartPoint="0.5, 0" EndPoint="0.5, 1">
        <GradientStop Color="{DynamicResource DarkestColor}" Offset="0" />
        <GradientStop Color="{DynamicResource DarkerColor}" Offset="1" />
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="HeaderFade" StartPoint="0.5, 0" EndPoint="0.5, 1">
        <GradientStop Color="{DynamicResource LighterColor}" Offset="0" />
        <GradientStop Color="{DynamicResource DarkerColor}" Offset="1" />
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="ReverseHeaderFade" StartPoint="0.5, 0" EndPoint="0.5, 1">
        <GradientStop Color="{DynamicResource DarkerColor}" Offset="0" />
        <GradientStop Color="{DynamicResource LighterColor}" Offset="1" />
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="RuanGreenFade" StartPoint="0.5, 0" EndPoint="0.5, 1">
        <GradientStop Color="{DynamicResource RuanGreenColor}" Offset="0" />
        <GradientStop Color="{DynamicResource DarkestColor}" Offset="1" />
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="RuanRedFade" StartPoint="0.5, 0" EndPoint="0.5, 1">
        <GradientStop Color="{DynamicResource RuanRedColor}" Offset="0" />
        <GradientStop Color="{DynamicResource DarkestColor}" Offset="1" />
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="ReverseRuanRedFade" StartPoint="0.5, 0" EndPoint="0.5, 1">
        <GradientStop Color="{DynamicResource DarkestColor}" Offset="0" />
        <GradientStop Color="{DynamicResource RuanRedColor}" Offset="1" />
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="CobaltBlueFade" StartPoint="0.5, 0" EndPoint="0.5, 1">
        <GradientStop Color="{DynamicResource CobaltBlueColor}" Offset="0" />
        <GradientStop Color="{DynamicResource DarkestColor}" Offset="1" />
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="ReverseCobaltBlueFade" StartPoint="0.5, 0" EndPoint="0.5, 1">
        <GradientStop Color="{DynamicResource DarkestColor}" Offset="0" />
        <GradientStop Color="{DynamicResource CobaltBlueColor}" Offset="1" />
    </LinearGradientBrush>

    <!--Control colors.-->
    <Color x:Key="WindowColor">#FFE8EDF9</Color>
    <Color x:Key="ContentAreaColorLight">#FFC5CBF9</Color>
    <Color x:Key="ContentAreaColorDark">#FF7381F9</Color>

    <Color x:Key="DisabledControlLightColor">#FFE8EDF9</Color>
    <Color x:Key="DisabledControlDarkColor">#FFC5CBF9</Color>
    <Color x:Key="DisabledForegroundColor">#FF888888</Color>

    <Color x:Key="SelectedBackgroundColor">#FFC5CBF9</Color>
    <Color x:Key="SelectedUnfocusedColor">#FFDDDDDD</Color>

    <Color x:Key="ControlLightColor">White</Color>
    <Color x:Key="ControlMediumColor">#FF7381F9</Color>
    <Color x:Key="ControlDarkColor">#FF211AA9</Color>

    <Color x:Key="ControlMouseOverColor">#FF3843C4</Color>
    <Color x:Key="ControlPressedColor">#FF211AA9</Color>


    <Color x:Key="GlyphColor">#FF444444</Color>
    <Color x:Key="GlyphMouseOver">sc#1, 0.004391443, 0.002428215, 0.242281124</Color>

    <!--Border colors-->
    <Color x:Key="BorderLightColor">#FFCCCCCC</Color>
    <Color x:Key="BorderMediumColor">#FF888888</Color>
    <Color x:Key="BorderDarkColor">#FF444444</Color>

    <Color x:Key="PressedBorderLightColor">#FF888888</Color>
    <Color x:Key="PressedBorderDarkColor">#FF444444</Color>

    <Color x:Key="DisabledBorderLightColor">#FFAAAAAA</Color>
    <Color x:Key="DisabledBorderDarkColor">#FF888888</Color>

    <Color x:Key="DefaultBorderBrushDarkColor">Black</Color>

    <!--Control-specific resources.-->
    <Color x:Key="HeaderTopColor">#FFC5CBF9</Color>
    <Color x:Key="DatagridCurrentCellBorderColor">Black</Color>
    <Color x:Key="SliderTrackDarkColor">#FFC5CBF9</Color>

    <Color x:Key="NavButtonFrameColor">#FF3843C4</Color>
</ResourceDictionary>